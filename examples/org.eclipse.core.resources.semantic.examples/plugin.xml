<plugin>


   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.core.resources.semantic.examples.category"
            name="Semantic File System">
      </category>
      <wizard
            category="org.eclipse.core.resources.semantic.examples.category"
            class="org.eclipse.core.resources.semantic.examples.NewDemoSemanticProjectWizard"
            icon="icons/newprj_wiz.gif"
            id="org.eclipse.core.resources.semantic.examples_demoProjectWizard"
            name="Demo Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.core.resources.IContainer"
            class="org.eclipse.core.resources.semantic.examples.remote.RemoteStoreAdapter">
         <adapter
               type="org.eclipse.core.resources.semantic.examples.remote.RemoteStore">
         </adapter>
      </factory>
      <factory
            adaptableType="org.eclipse.core.resources.IContainer"
            class="org.eclipse.core.resources.semantic.examples.remote.RemoteStoreAdapter">
         <adapter
               type="org.eclipse.core.resources.semantic.examples.remote.RemoteStoreTransient">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.core.resources.semantic.examples.remote.RemoteStoreEditor"
            extensions="xml"
            id="org.eclipse.core.resources.semantic.examples.editors.RemoteStoreEditor"
            name="RemoteStore Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.core.resources.semantic.examples.HandleAddFromRemote"
            id="org.eclipse.core.resources.semantic.examples_addFromRemote"
            name="Add Resource From Remote">
      </command>
      <command
            defaultHandler="org.eclipse.core.resources.semantic.examples.HandleAddRestResource"
            id="org.eclipse.core.resources.semantic.examples_addRESTResource"
            name="Add Demo REST Resource">
      </command>
      <command
            defaultHandler="org.eclipse.core.resources.semantic.examples.HandleAddFileFromRemote"
            id="org.eclipse.core.resources.semantic.examples_addFileFromRemote"
            name="Add a Local File System Resource">
      </command>
      <command
            defaultHandler="org.eclipse.core.resources.semantic.examples.HandleCreateRemotely"
            id="org.eclipse.core.resources.semantic.examples_createRemote"
            name="Create a remote Resource">
      </command>
      <command
            defaultHandler="org.eclipse.core.resources.semantic.examples.HandleAddWsFileFromRemote"
            id="org.eclipse.core.resources.semantic.examples_addWSDLResource"
            name="Add a WSDL Resource">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.resources.semantic.spi.contentProvider">
      <contentProvider
            class="org.eclipse.core.resources.semantic.examples.providers.RemoteStoreContentProvider"
            id="org.eclipse.core.resources.semantic.examples.providers.RemoteStoreContentProvider">
      </contentProvider>
      <contentProvider
            class="org.eclipse.core.resources.semantic.examples.providers.SampleWSDLXSDContentProvider"
            id="org.eclipse.core.resources.semantic.examples.providers.SampleWSDLXSDContentProvider">
      </contentProvider>
      <contentProvider
            class="org.eclipse.core.resources.semantic.examples.providers.SampleCompositeResourceContentProvider"
            id="org.eclipse.core.resources.semantic.examples.providers.SampleCompositeResourceContentProvider">
      </contentProvider>
   </extension>
   <extension
         point="org.eclipse.core.resources.semantic.spi.pathContentProviderMapping">
      <mapping
            contentProviderId="org.eclipse.core.resources.semantic.examples.providers.SampleCompositeResourceContentProvider"
            path="SampleCompositeResourceContentProvider">
      </mapping>
      <mapping
            contentProviderId="org.eclipse.core.resources.semantic.examples.providers.RemoteStoreContentProvider"
            path="RemoteStoreContentProvider">
      </mapping>
      <mapping
            contentProviderId="org.eclipse.core.resources.semantic.examples.providers.SampleWSDLXSDContentProvider"
            path="SampleWSDLXSDContentProvider">
      </mapping>
   </extension>


</plugin>
